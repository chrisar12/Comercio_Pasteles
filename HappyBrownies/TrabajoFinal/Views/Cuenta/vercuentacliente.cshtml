@model  TrabajoFinal.Models.Cliente
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Pages</a></li>
                    <li class="active">User Information</li>
                </ul><!-- end breadcrumb -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end breadcrumbs -->
<!-- start section -->
<section class="section white-backgorund">
    <div class="container">
        <div class="row">
            <!-- start sidebar -->
            <div class="col-sm-3">
                <div class="widget">
                    <h6 class="subtitle">Account Navigation</h6>

                    <ul class="list list-unstyled">
                        <li>
                            <a href="@Url.Action("vercuentacliente", "Cuenta")">Mi Cuenta</a>
                        </li>
                        <li class="active">
                            <a href="@Url.Action("vercarrito", "VerCarrito")">Mi Carrito <span  class="text-primary"></span></a>
                        </li>
                        <li>
                            <a href="order-list.html">Mis Pedidos</a>
                        </li>
                      
                       
                    </ul>
                </div><!-- end widget -->

           
            </div><!-- end col -->
            <!-- end sidebar -->
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-12 text-left">
                        <h2 class="title">Mi Informacion Personal</h2>
                    </div><!-- end col -->
                </div><!-- end row -->

                <hr class="spacer-5"><hr class="spacer-20 no-border">

                <div class="row">
                    <div class="col-md-8">

                            <div class="form-group">
                                <label for="email" class="col-sm-2 control-label">Nombre</label>
                                <div class="col-sm-10">
                                    <input type="text" id="firstName" placeholder="Nombre" class="form-control input-md required" required="" value='@Model.Nombres  @Model.Apellidos' />
                                </div>
                            </div><!-- end form-group -->
                        <hr class="spacer-5"><hr class="spacer-20 no-border">

                            <div class="form-group">
                                <label for="email" class="col-sm-2 control-label">Telefono</label>
                                <div class="col-sm-10">
                                    <input type="tel" id="telephone" placeholder="Telefono" class="form-control input-md required" required="" value="@Model.Celular" />
                                </div><!-- end form-group -->
                            </div>
                        <hr class="spacer-5"><hr class="spacer-20 no-border">

                            <div class="form-group">
                                <label for="email" class="col-sm-2 control-label">Correo</label>
                                <div class="col-sm-10">

                                    <input type="email" id="email" placeholder="Email" class="form-control input-md required" required="" value="@Model.Correo" />
                                </div><!-- end form-group -->
                            </div>
                        <hr class="spacer-5"><hr class="spacer-20 no-border">

                            <div class="form-group">
                                <label for="email" class="col-sm-2 control-label">Direccion</label>
                                <div class="col-sm-10">
                                    <input type="text" id="addr1" placeholder="Direccion 1" class="form-control input-md required" required="" value="@Model.Direccion" />
                                </div>
                            </div>
                        <hr class="spacer-5"><hr class="spacer-20 no-border">
                    </div>

             
                </div><!-- end row -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>