        <div class="row">
            <div class="col-sm-4 col-md-3">
              

                <div class="navbar-vertical">
                    <ul class="nav nav-stacked">
                        <li class="header">
                            <h6 class="text-uppercase">Categorias<i class="fa fa-navicon pull-right"></i></h6>
                           @foreach (var item in ViewBag.listacategoria)
                           {
                              <li><a name="categor"  href="@Url.Action("productos","Productos",new { Area="",categor=@item.Denominacion})">@item.Denominacion</a></li>
                               
                           }
                        </li>
                  </ul>
                </div><!-- end navbar-vertical -->

                <hr class="spacer-20 no-border">


                <!-- MAS VENDIDOS -->
                <div class="widget hidden-xs">
                    <h6 class="subtitle text-uppercase">Más Vendidos </h6>

                @foreach (var item in Model)
                {
                    var imagen = @item.ProductoImagen.FirstOrDefault();
                    string img = imagen == null ? "no_disponible.jpg" : imagen.Imagen;
                <ul class="items">
                        <li>
                            <a href="shop-single-product-v1.html" class="product-image">
                                <img src="~/ImgProductos/@img" alt="Sample Product ">
                            </a>
                            <div class="product-details">
                                <p class="product-name">
                                    <a name="idproducto" href="@Url.Action("mostrardetalleproducto", "MostrarDetalleProducto",new { Area="",idproducto=@item.ProductoId})">@item.Denominacion</a>
                                </p>
                                <span class="price text-primary">@item.Precio</span>
                                <div class="rate text-warning">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                        </li><!-- end item -->
                        <li>
                           
                        </li><!-- end item -->
                        
              
               
                    </ul>
                }
                </div><!-- end widget -->
            </div><!-- end col -->



