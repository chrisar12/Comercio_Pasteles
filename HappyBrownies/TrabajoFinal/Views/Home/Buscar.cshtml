</div><!-- end breadcrumbs -->
<!-- start section -->
<section class="section white-backgorund">
    <div class="container">
        <div class="row">
            <!-- start sidebar -->
            <div class="col-sm-3">
                <div class="widget">

                    <div class="navbar-vertical">
                        <ul class="nav nav-stacked">
                            <li class="header">
                                <h6 class="text-uppercase">Categorias <i class="fa fa-navicon pull-right"></i></h6>
                            </li>

                            <li><a href="javascript:void(0);">Linea Regular</a></li>
                            <li><a href="javascript:void(0);">Linea Sin Azucar</a></li>
                            <li><a href="javascript:void(0);">Pasteles de Boda</a></li>
                            <li>
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Torta de Cumpleaños <i class="fa fa-angle-right pull-right"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="javascript:void(0);">Cumpleaños Bebes</a></li>
                                    <li><a href="javascript:void(0);">Cumpleaños Jovenes</a></li>
                                    <li><a href="javascript:void(0);">Cumpleaños Adultos</a></li>

                                </ul>
                            </li>



                        </ul>
                    </div><!-- end navbar-vertical -->

                </div><!-- end widget -->
                @*<div class="widget">
                        <h6 class="subtitle">Precios</h6>

                        <form method="post" class="price-range" data-start-min="250" data-start-max="650" data-min="0" data-max="1000" data-step="1">
                            <div class="ui-range-values">
                                <div class="ui-range-value-min">
                                    $<span></span>
                                    <input type="hidden">
                                </div> -
                                <div class="ui-range-value-max">
                                    $<span></span>
