@model IEnumerable<TrabajoFinal.Models.Producto>

@{
    ViewBag.Title = "Index";
}


<div class="right_col bg_fff" role="main">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <p>
       </p>
        <p>
        </p>
        <hr />
        <p>

            <button class="btn btn-info">
                <i class="fa fa-check"></i> @Html.ActionLink("Crear Nuevo Producto", "Create")
            </button>

        </p>


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Denominacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Existencias)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Denominacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Existencias)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.ProductoId }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.ProductoId }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.ProductoId })
                    </td>
                </tr>
            }

        </table>



    </div>

</div>