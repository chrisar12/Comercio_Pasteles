@model IEnumerable<TrabajoFinal.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<div class="right_col bg_fff" role="main">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <h2></h2>
       <p>
        </p>
        <p>
        </p>
        <hr />
        <p>
<p>
            <button class="btn btn-info">
                 <i class="fa fa-check"></i> @Html.ActionLink("Crear Usuario", "Create")
             </button>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nickname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clave)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nickname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clave)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.UsuarioId }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.UsuarioId }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.UsuarioId })
                    </td>
                </tr>
            }

        </table>
</div>
</div>