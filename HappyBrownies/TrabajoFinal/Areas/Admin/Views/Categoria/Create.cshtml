@model TrabajoFinal.Models.Categoria

@{
    ViewBag.Title = "Create";
}

<div class="right_col bg_fff" role="main">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <h2>Crear</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Categoria</h4>
                <hr />

                <div class="form-group">
                    <ul class="nav navbar-right panel_toolbox">
                        <li>

                            <button type="submit" value="Create" class="btn btn-info">
                                <i class="fa fa-check"></i> Save
                            </button>
                        
                        </li>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <li>
                            <button class="btn btn-info">
                                <i class="fa fa-check"></i> @Html.ActionLink("Volver Lista", "Index")
                            </button>
                        </li>
                    </ul>
                </div>
               
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.Denominacion, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Denominacion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Denominacion, "", new { @class = "text-danger" })
                        </div>
                    </div>
            


                  
                </div>
        }

        
</div>
</div>