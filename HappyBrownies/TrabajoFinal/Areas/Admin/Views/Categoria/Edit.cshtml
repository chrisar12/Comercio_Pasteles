@model TrabajoFinal.Models.Categoria

@{
    ViewBag.Title = "Edit";
}

<div class="right_col bg_fff" role="main">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <h2>Editar</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Categoria</h4>

                <div class="form-group">
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <button type="submit" value="Save" class="btn btn-info">
                                <i class="fa fa-check"></i> Guardar
                            </button>
                        </li>
                        <li>
                            <button class="btn btn-info">
                                <i class="fa fa-check"></i> @Html.ActionLink("Volver Lista", "Index")
                            </button>

                        </li>
                    </ul>
                </div>




                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.CategoriaId)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Denominacion, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Denominacion, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Denominacion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                          
                </div>
                }

              
            </div>
</div>