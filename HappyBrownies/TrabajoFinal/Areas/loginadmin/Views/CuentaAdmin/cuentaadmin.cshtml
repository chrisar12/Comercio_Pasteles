

<form method="post" action="@Url.Action("Login","login",new {Area="loginadmin"})">
    <h1>Iniciar Sesion</h1>
    <div>
        <input type="text" class="form-control" placeholder="Nombre" required="" />
    </div>
    <div>
        <input type="password" class="form-control" placeholder="Contraseña" required="" />
    </div>
    <div class="text-left">
        <button type="submit" class="btn btn-default submit">Entrar</button>
        <a class="reset_pass" href="#">Olvidaste Contraseña?</a>
    </div>

    <div class="clearfix"></div>

    <div class="separator">

        <div class="text-center">
            <a class="btn btn-facebook">Entrar con <i class="fa fa-facebook"></i></a>
            <a class="btn btn-twitter">Entrar con <i class="fa fa-twitter"></i></a>
        </div>

        <p class="change_link" style="margin-top: 30px;">

        </p>

    </div>
</form>